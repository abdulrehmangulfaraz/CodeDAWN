{
  "name": "codedawn",
  "displayName": "CodeDawn",
  "description": "A discreet, powerful, and context-aware AI code assistant.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codedawn.invoke"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codedawn.invoke",
        "title": "CodeDawn: Invoke"
      }
    ],
    "keybindings": [
      {
        "command": "codedawn.invoke",
        "key": "ctrl+l",
        "mac": "cmd+l",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "eslint": "^8.56.0",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "dotenv": "^17.2.0",
    "node-fetch": "^2.7.0"
  }
}
